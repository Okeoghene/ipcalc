subnet_mask = '255.255.255' #currently acting as the subnet_mask input (Noticed if a dot is last string entered it crashes)

subnet_mask = subnet_mask.split('.') #This converts the input to a list

values = [0, 128, 192, 224, 240, 248, 252, 254, 255]

guilty = False

if subnet_mask == []:
    guilty = True
elif len(subnet_mask) != 4:
    guilty = True

for items in subnet_mask:
    items = int(items)
    if items not in values:
        guilty = True
    elif items > 255:
        guilty = True

if guilty == True:
    faulty_mask = subnet_mask

print(faulty_mask)
